@using YS.Admin.Enum
@using YS.Admin.Util.Extension
@{
    Layout = "~/Areas/System/Views/Shared/_FormWhite.cshtml";
}

<div class="wrapper animated fadeInRight">
    <form id="form" class="form-horizontal m">

        <div class="form-group">
            <label class="col-sm-2 control-label ">首页标题</label>
            <div class="col-sm-4">
                <textarea id="homeTitle" col="HomeTitle" type="text" class="form-control"
                          style="resize: vertical;">
                    </textarea>
            </div>
            <label class="col-sm-2 control-label ">网站名称</label>
            <div class="col-sm-4">
                <input id="webName" col="WebName" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">网站标题</label>
            <div class="col-sm-4">
                <textarea id="webTitle" col="WebTitle" type="text" class="form-control"
                          style="resize: vertical;">
                    </textarea>
            </div>
            <label class="col-sm-2 control-label ">网站网站域名</label>
            <div class="col-sm-4">
                <input id="webDomain" col="WebDomain" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">META关键词</label>
            <div class="col-sm-4">
                <input id="webMETAKey" col="WebMETAKey" type="text" class="form-control" />
            </div>
            <label class="col-sm-2 control-label ">META描述</label>
            <div class="col-sm-4">
                <input id="webMETAValue" col="WebMETAValue" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">邮箱</label>
            <div class="col-sm-4">
                <input id="webEmail" col="WebEmail" type="text" class="form-control" />
            </div>
            <label class="col-sm-2 control-label ">QQ</label>
            <div class="col-sm-4">
                <input id="webQQ" col="WebQQ" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label ">上传文件类型</label>
            <div class="col-sm-4">
                <input id="fileType" col="FileType" type="text" class="form-control" />
            </div>
            <label class="col-sm-2 control-label ">上传文件最大限制</label>
            <div class="col-sm-4">
                <input id="maxFileSize" col="MaxFileSize" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label ">是否开启评论</label>
            <div class="col-sm-4" id="commentStatus" col="CommentStatus"></div>

            <label class="col-sm-2 control-label ">是否开启留言</label>
            <div class="col-sm-4" id="feedbackStatus" col="FeedbackStatus"></div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label ">每日最大评论数量</label>
            <div class="col-sm-4">
                <input id="maxCommentCount" col="MaxCommentCount" type="text" class="form-control" />
            </div>
            <label class="col-sm-2 control-label ">每日最大留言数量</label>
            <div class="col-sm-4">
                <input id="maxFeedbackCount" col="MaxFeedbackCount" type="text" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">愿景</label>
            <div class="col-sm-4">
                <textarea id="slogan" col="Slogan" type="text" class="form-control"
                          style="resize: vertical;">
                    </textarea>
            </div>
            <label class="col-sm-2 control-label ">目标</label>
            <div class="col-sm-4">
                <textarea id="target" col="Target" type="text" class="form-control"
                          style="resize: vertical;">
                    </textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label ">本地地址</label>
            <div class="col-sm-4">
                <input id="webAddr" col="WebAddr" type="text" class="form-control" />
            </div>
            <label class="col-sm-2 control-label ">网站版权信息</label>
            <div class="col-sm-4">
                <textarea id="webCopyRight" col="WebCopyRight" type="text" class="form-control"
                          style="resize: vertical;">
                    </textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label ">缓存时间</label>
            <div class="col-sm-8">
                <input id="cacheTime" col="CacheTime" type="text" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-5 col-sm-10">
                <button type="button" class="btn btn-sm btn-primary" onclick="saveForm()"><i class="fa fa-check"></i>保 存</button>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">

    $(function () {
        $("#commentStatus").ysRadioBox({ data: ys.getJson(@Html.Raw(typeof(StatusEnum).EnumToDictionaryString())) });
        $("#feedbackStatus").ysRadioBox({ data: ys.getJson(@Html.Raw(typeof(StatusEnum).EnumToDictionaryString())) });
        getForm();

        $('#form').validate({
            rules: {
            }
        });
    });

    function getForm() {
        ys.ajax({
            url: '@Url.Content("~/BlogManage/BlogConfig/GetFormJson")',
            type: 'get',
            success: function (obj) {
                if (obj.Tag == 1) {
                    $('#form').setWebControls(obj.Data);
                }
            }
        });
    }

    function saveForm() {
        if ($('#form').validate().form()) {
            var postData = $('#form').getWebControls();
            ys.ajax({
                url: '@Url.Content("~/BlogManage/BlogConfig/SaveFormJson")',
                type: 'post',
                data: postData,
                success: function (obj) {
                    if (obj.Tag == 1) {
                        ys.msgSuccess(obj.Message);
                    }
                    else {
                        ys.msgError(obj.Message);
                    }
                }
            });
        }
    }
</script>

