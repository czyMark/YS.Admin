@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostingEnvironment
@{
    Layout = "~/Areas/Portal/Views/Shared/_Layout.cshtml";

}

@section header {

    <link rel="stylesheet" href="@Url.Content("~/css/AnnouncementDetails.css")" />
}

<div id="app3" class="wrap">
    <div class="element-wrap">
        <div class="con-main-wrap flex-row">
            <div class="left">
                <div class="title"> @ViewBag.title </div>
                <div class="label flex-row">
                    <p>时间：@ViewBag.time</p>
                    <p>
                        字体：
                        <span v-for="item in ['大', '中', '小']" :key="item"
                              :class="newsDetails.select === item ? 'active' : ''" v-on:click="select">
                            {{ item }}
                        </span>
                    </p>
                </div>
                <!-- 富文本本 -->
                <div class="html">  @Html.Raw(@ViewBag.details)</div>
            </div>
            <div class="right">
                <div class="item">
                    @if (@ViewBag.prevTitle != "")
                    {
                        <div class="title"> 上一篇 </div>
                        <div class="label">  @ViewBag.prevTitle </div>
                        <div class="details">
                            <a href=" @ViewBag.prevSrc" class="details">查看详情></a>
                        </div>
                    }
                </div>
                <div class="item">
                    @if (@ViewBag.nextTitle != "")
                    {
                        <div class="title"> 下一篇 </div>
                        <div class="label">  @ViewBag.nextTitle </div>
                        <div class="details">
                            <a href="@ViewBag.nextSrc" class="details">查看详情></a>
                        </div>
                    }
                </div>
                <a href="~/Portal/Viewinfo/SiteInfo?id=@ViewBag.CategoryId" class="btns">
                    <img src="/images/new/left.png" alt="" /> 返回列表
                </a>
            </div>
        </div>
    </div>

</div>

<script>


    const App3 = {
        data() {
            return {
                newsDetails: {
                    select: '小'
                }
            }

        },
        methods: {

        },
        mounted() {
            cx();
            window.addEventListener('resize', function () {
                cx();
            });
            function cx() {
                var Wth = document.documentElement.clientWidth;
                var app = document.querySelector('#app3');
                if (Wth < 1400) {
                    if (navigator.userAgent.indexOf('Firefox') != -1) {
                    } else {
                        document.documentElement.style.zoom = (Wth / 1250) * 100 + '%';
                    }
                } else {
                    // app.style.width = '100%';
                    document.documentElement.style.zoom = '100%';
                }
            }
        },
        beforeUnmount() {

        },
        components: {}
    };
    function app3init() {
        const app3 = Vue.createApp(App3);
        app3.use(ElementPlus);
        app3.mount('#app3');
    }
</script>