@{
    Layout = "~/Areas/System/Views/Shared/_Index.cshtml";
}
<div class="container-div">
    <div class="row">
        <div id="searchDiv" class="col-sm-12 search-collapse">
            <div class="select-list">
                <ul>
                    <li>
                        客户姓名：<input id="CustomerName" col="CustomerName" type="text" />
                    </li>
                    <li>
                        数据表：<span id="printDataId" col="PrintDataId"></span>
                    </li>
                    <li>
                        <a id="btnSearch" class="btn btn-primary btn-sm" onclick="searchGrid()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="btn-group-sm hidden-xs" id="toolbar">
            <a id="btnAdd" class="btn btn-success" onclick="showSaveForm(true)"><i class="fa fa-plus"></i> 新增</a>
        </div>
        <div class="col-sm-12 select-table table-striped">
            <table id="gridTable" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $("#printDataId").ysComboBox({
            url: '@Url.Content("~/CollectionManage/Pringdatamaintag/GetListJson")',
            key: "Id",
            value: "MainTagName"
        });


        initGrid();
          

    });

    function initGrid() {
        var queryUrl = '@Url.Content("~/CollectionManage/Customerprofile/GetPageListJson")';
        $('#gridTable').ysTable({
            url: queryUrl,
            columns: [
                { checkbox: true, visible: true },
                { field: 'Id', title: 'Id', visible: false },
                { field: 'CustomerName', title: '客户姓名' },
                { field: 'CustomerTel', title: '客户电话' },
                {
                    field: 'BanknoteCount', title: '纸币条目数',
                    formatter: function (value, row, index) {
                        var actions = [];
                        actions.push('<span class="value">' + value + '</span> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handleInsert(1,\'' + row.Id + '\',\'' + row.CustomerName + '-纸币录入\',' + value + ')"><i class="fa fa-edit"></i>录入</a> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handlePrint(1,\'' + row.Id + '\',\'' + row.CustomerName + '-纸币打印\',' + value + ')"><i class="fa fa-edit"></i>打印</a> '); return actions.join('');
                    }
                },
                {
                    field: 'StampCount', title: '邮票条目数',
                    formatter: function (value, row, index) {
                        var actions = [];
                        actions.push('<span class="value">' + value + '</span> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handleInsert(2,\'' + row.Id + '\',\'' + row.CustomerName + '-邮票录入\',' + value + ')"><i class="fa fa-edit"></i>录入</a> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handlePrint(2,\'' + row.Id + '\',\'' + row.CustomerName + '-邮票打印\',' + value + ')"><i class="fa fa-edit"></i>打印</a> ');
                        return actions.join('');
                    }
                },
                {
                    field: 'CoinCount', title: '硬币条目数',
                    formatter: function (value, row, index) {
                        var actions = [];
                        actions.push('<span class="value">' + value + '</span> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handleInsert(3,\'' + row.Id + '\',\'' + row.CustomerName + '-硬币录入\',' + value + ')"><i class="fa fa-edit"></i>录入</a> ');

                        actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="handlePrint(3,\'' + row.Id + '\',\'' + row.CustomerName + '-硬币打印\',' + value + ')"><i class="fa fa-edit"></i>打印</a> ');
                        return actions.join('');
                    }
                },
                    { field: 'BaseCreateTime', title: '创建时间' }
            ],
            queryParams: function (params) {
                var pagination = $('#gridTable').ysTable('getPagination', params);
                var queryString = $('#searchDiv').getWebControls(pagination);
                // console.log(JSON.stringify(queryString));
                return queryString;
            }
        });
    }
    function handleInsert(datatag, rowid, tabName, val) {
        if (val > 0) {
            var url = '@Url.Content("~/CollectionManage/PrintdataBase/PrintdataBaseIndex")' + '?id=' + rowid + '&datatag=' + datatag;
            createMenuItem(url, tabName);
        } else {
            ys.msgError("没有要维护的数据");
        }
    }
    function handlePrint(datatag, rowid, tabName, val) {
        if (val > 0) {
            var url = '@Url.Content("~/CollectionManage/PrintdataBase/PrintdataBasePrint")' + '?id=' + rowid + '&datatag=' + datatag;
            createMenuItem(url, tabName);
        } else {
            ys.msgError("没有要打印的数据");
        }

    }
    function searchGrid() {
        $('#gridTable').ysTable('search');
        resetToolbarStatus();
    }

    function showSaveForm(bAdd) {
        var id = 0;
        ys.openDialog({
            title: '添加',
            content: '@Url.Content("~/CollectionManage/Customerprofile/CustomerprofileForm")' + '?id=' + id,
            width: '768px',
            height: '550px',
            callback: function (index, layero) {
                var iframeWin = window[layero.find('iframe')[0]['name']];
                iframeWin.saveForm(index);
            }
        });
    }

</script>
