@{
    Layout = "~/Areas/System/Views/Shared/_Index.cshtml";
}
<div class="container-div">
    <div class="row">
        <div id="searchDiv" >
           @*  <div class="select-list">
                <ul>
                    <li>
                        属性列：
                        <span id="stylePropElement" col="StylePropElement"></span>
                    </li>
                    <li>
                        <a id="btnSearch" class="btn btn-primary btn-sm" onclick="searchGrid()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                    </li>
                </ul>
            </div> *@
        </div>
        <div class="btn-group-sm hidden-xs" id="toolbar">
            <a id="btnAdd" class="btn btn-success" onclick="showSaveForm(true)"><i class="fa fa-plus"></i> 新增</a>
            <a id="btnEdit" class="btn btn-primary disabled" onclick="showSaveForm(false)"><i class="fa fa-edit"></i> 修改</a>
            <a id="btnDelete" class="btn btn-danger disabled" onclick="deleteForm()"><i class="fa fa-remove"></i> 删除</a>
        </div>
        <div class="col-sm-12 select-table table-striped">
            <table id="gridTable" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

<script type="text/javascript">

    var styleId = ys.request("id");
    var propElement = [ 
        { Key: '', Value: '-' },
        { Key: 'IDCode', Value: '鉴定编号' },
        { Key: 'CollectionName', Value: '藏品名称' },
        { Key: 'CollectionYear', Value: '年份' },
        { Key: 'CollectionValue', Value: '面值' },
        { Key: 'PrintArt', Value: '印刷工艺' },
        { Key: 'SerialCode', Value: '冠字编号' },
        { Key: 'Rating', Value: '评分' },
        { Key: 'RatingEnglish', Value: '评分英语释义' },
        { Key: 'HQP', Value: 'HQP' },
        { Key: 'StarTag', Value: '三星' },
        { Key: 'EditionPersonalization', Value: '版别/个性化' },
        { Key: 'EstimatedValue', Value: '估值保价' },
        { Key: 'Rarity', Value: '珍稀度' },
        { Key: 'IssuingUnit', Value: '发行单位' },
        { Key: 'OS', Value: 'OS' },
        { Key: 'Description', Value: '描述' },
        { Key: 'Edition', Value: '版别' },
        { Key: 'NumberCode', Value: '志号' },
        { Key: 'Personalization', Value: '个性化' },
        { Key: 'Material', Value: '材质' },
        { Key: 'Weight', Value: '重量' },
        { Key: 'Size', Value: '尺寸' }
    ];
    $(function () {
        initGrid();

        $("#stylePropElement").ysComboBox({
            data: propElement
        });

    });

    function initGrid() {
        var queryUrl = '@Url.Content("~/CollectionManage/PrintstyleProp/GetPageListJson")' + '?StyleId=' + styleId;
        $('#gridTable').ysTable({
            url: queryUrl,
            columns: [
                { checkbox: true, visible: true },
                { field: 'Id', title: 'Id', visible: false },
                {
                    field: 'StylePropElement',
                    title: '打印内容',
                    formatter: function (value, item, index) {
                        var propName =
                            $.grep(propElement, function (item) {
                                return item.Key == value;
                            })[0].Value;

                        return   propName;
                    }
                },

                { field: 'StylePropFontFamily', title: '字体' },
                { field: 'StylePropFontSize', title: '文字大小' },
                { field: 'StylePropColor', title: '颜色' },
            ],
            queryParams: function (params) {
                var pagination = $('#gridTable').ysTable('getPagination', params);
                var queryString = $('#searchDiv').getWebControls(pagination);
                return queryString;
            }
        });
    }

    function searchGrid() {
        $('#gridTable').ysTable('search');
        resetToolbarStatus();
    }

    function showSaveForm(bAdd) {
        var id = 0;
        if (!bAdd) {
            var selectedRow = $('#gridTable').bootstrapTable('getSelections');
            if (!ys.checkRowEdit(selectedRow)) {
                return;
            }
            else {
                id = selectedRow[0].Id;
            }
        }
        ys.openDialog({
            title: id > 0 ? '编辑' : '添加',
            content: '@Url.Content("~/CollectionManage/PrintstyleProp/PrintstylePropForm")' + '?styleId=' + styleId + '&id=' + id,
            width: "300px",
            height: "420px",
            shadeClose: true,
            callback: function (index, layero) {
                var iframeWin = window[layero.find('iframe')[0]['name']];
                iframeWin.saveForm(index);
            }
        });
    }

    function deleteForm() {
        var selectedRow = $('#gridTable').bootstrapTable('getSelections');
        if (ys.checkRowDelete(selectedRow)) {
            ys.confirm('确认要删除选中的' + selectedRow.length + '条数据吗？', function () {
                var ids = ys.getIds(selectedRow);
                ys.ajax({
                    url: '@Url.Content("~/CollectionManage/PrintstyleProp/DeleteFormJson")' + '?ids=' + ids,
                    type: 'post',
                    success: function (obj) {
                        if (obj.Tag == 1) {
                            ys.msgSuccess(obj.Message);
                            searchGrid();
                        }
                        else {
                            ys.msgError(obj.Message);
                        }
                    }
                });
            });
        }
    }
</script>
